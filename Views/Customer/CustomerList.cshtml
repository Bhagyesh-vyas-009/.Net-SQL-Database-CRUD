
@using System.Data
@model DataTable
<div class="row">
    <div class="col-lg-12">

        <div class="card w-100">
            <div class="card-body">
                <div class="row">
                    <h5 class="col card-title">Customer List</h5>
                    <h5 class="col-2 my-2 ml-2">
                        <a class="btn btn-primary" asp-controller="Customer" asp-action="CustomerAddEdit">Add Customer</a>
                    </h5>
                    <h5 class="col-2 my-2 ">
                        <a class="btn btn-info" asp-controller="ExportToExcel" asp-action="ExportToExcel" asp-route-table="Customer"><i class="bi bi-filetype-xlsx"></i>Export</a>
                    </h5>
                </div>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-success">
                        @TempData["Success"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <!-- Default Table -->
                <div class="d-flex  overflow-x-scroll">
                    <table class="table table-striped">
                    <thead>
                        <tr>
                            <th colspan="2" >Actions</th>
                            @* <th scope="col">CustomerID</th> *@
                            <th scope="col">Customer Name</th>
                            <th scope="col">Home Address</th>
                            <th scope="col">Email</th>
                            <th scope="col">Mobile No</th>
                            <th scope="col">GST NO</th>
                            <th scope="col">City Name</th>
                            <th scope="col">PinCode</th>
                            <th scope="col">Net Amount</th>
                            <th scope="col">User Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow dr in Model.Rows)
                        {
                            <tr>
                                <td>
                                    <a class="btn btn-outline-success" asp-controller="Customer" asp-action="CustomerAddEdit" asp-route-CustomerID="@dr["CustomerID"]">
                                        <i class="bi bi-pen-fill"></i>
                                    </a>
                                </td>
                                <td>
                                    <form method="post" asp-controller="Customer" asp-action="CustomerDelete">
                                        <input type="hidden" name="CustomerID" value="@dr["CustomerID"]" />
                                            <button type="submit" class="btn btn-outline-danger btn-xs" onclick=" return confirm('Sure!! Are you want to delete @dr["CustomerName"]')">
                                            <i class="bi bi-x"></i>
                                            </button>
                                    </form>
                                </td>
                                @* <td scope="col">@dr["CustomerID"]</td> *@
                                <td scope="col">@dr["CustomerName"]</td>
                                <td scope="col">@dr["HomeAddress"]</td>
                                <td scope="col">@dr["Email"]</td>
                                <td scope="col">@dr["MobileNo"]</td>
                                <td scope="col">@dr["GSTNO"]</td>
                                <td scope="col">@dr["CityName"]</td>
                                <td scope="col">@dr["PinCode"]</td>
                                <td scope="col" align="right">@dr["NetAmount"]</td>
                                <td scope="col">@dr["UserName"]</td>

                            </tr>
                        }
                    </tbody>

                </table>
                <!-- End Default Table Example -->
            </div>
            </div>
        </div>


    </div>
</div>

<script type="text/javascript">
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this item?")) {
            
        }
    }
</script>
