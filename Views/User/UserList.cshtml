@model DataTable;
@using System.Data;

<section>
    <span><h3>User List</h3></span>
    @if (TempData["Success"] != null)
    { 
       <div class="alert alert-success text-success">
            @TempData["Success"]
        </div> 
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="float-end">
        <a class="btn btn-primary mb-3" asp-controller="User" asp-action="UserAddEdit">Add User</a>
        <a class="btn btn-info mb-3" asp-controller="ExportToExcel" asp-action="ExportToExcel" asp-route-table="User"><i class="bi bi-filetype-xlsx"></i>Export</a>
    </div>
    @* <h4 class="alert alert-success text-success">
        @TempData["Success"]
    </h4>
    <h4 class="alert alert-danger text-danger">
        @TempData["ErrorMessage"]
    </h4> *@

    <table class="table">
        <thead>
            <tr>
                <!-- <th scope="col">UserID</th> -->
                <th scope="col">User Name</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">Mobile No</th>
                <th scope="col">Address</th>
                <th scope="col">IsActive</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow dr in Model.Rows)
            {
                <tr>
                    <!-- <td scope="col">@dr["UserID"]</td> -->
                    <td scope="col">@dr["UserName"]</td>
                    <td scope="col">@dr["Email"]</td>
                    <td scope="col">@dr["Password"]</td>
                    <td scope="col">@dr["MobileNo"]</td>
                    <td scope="col">@dr["Address"]</td>
                    <td scope="col">@dr["IsActive"]</td>
                    <td>
                        <a class="btn btn-outline-success" asp-controller="User" asp-action="UserAddEdit" asp-route-UserID="@dr["UserID"]">
                            <i class="bi bi-pen-fill"></i>
                        </a>
                    </td>
                    <td>
                        <form method="post" asp-controller="User" asp-action="UserDelete">
                            <input type="hidden" name="UserID" value="@dr["UserID"]" />
                            <button type="submit" class="btn btn-outline-danger btn-xs" onclick="return confirm('Sure!! Are you want to delete @dr["UserName"]')">
                                <i class="bi bi-x"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
