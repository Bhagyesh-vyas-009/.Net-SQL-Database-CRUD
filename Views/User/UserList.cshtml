@model DataTable;
@using System.Data;

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body row">
                    <h5 class="col card-title">User List</h5>
                    <h5 class="col-2 my-2 ml-2">
                        <a class="btn btn-primary" asp-controller="User" asp-action="UserAddEdit">Add User</a>
                    </h5>
                    <h5 class="col-2 my-2 ">
                        <a class="btn btn-info" asp-controller="ExportToExcel" asp-action="ExportToExcel" asp-route-table="User"><i class="bi bi-filetype-xlsx"></i>Export</a>
                    </h5>
                <div class="row">
                </div>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-success">
                        @TempData["Success"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <!-- Default Table -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <!-- <th scope="col">UserID</th> -->
                            <th scope="col">User Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Password</th>
                            <th scope="col">Mobile No</th>
                            <th scope="col">Address</th>
                            <th scope="col">IsActive</th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow dr in Model.Rows)
                        {
                            <tr>
                                <!-- <td scope="col">@dr["UserID"]</td> -->
                                <td scope="col">@dr["UserName"]</td>
                                <td scope="col">@dr["Email"]</td>
                                <td scope="col">@dr["Password"]</td>
                                <td scope="col">@dr["MobileNo"]</td>
                                <td scope="col">@dr["Address"]</td>
                                <td scope="col">@dr["IsActive"]</td>
                                <td>
                                    <a class="btn btn-outline-success" asp-controller="User" asp-action="UserAddEdit" asp-route-UserID="@dr["UserID"]">
                                        <i class="bi bi-pen-fill"></i>
                                    </a>
                                </td>
                                <td>
                                    <form method="post" asp-controller="User" asp-action="UserDelete">
                                        <input type="hidden" name="UserID" value="@dr["UserID"]" />
                                        <button type="submit" class="btn btn-outline-danger btn-xs" onclick="return confirm('Sure!! Are you want to delete @dr["UserName"]')">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- End Default Table Example -->
            </div>
        </div>


    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this item?")) {}
    }
</script>

