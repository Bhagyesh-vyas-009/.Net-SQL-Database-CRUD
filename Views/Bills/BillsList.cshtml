
@using System.Data
@model DataTable

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <h5 class="col card-title">Bills-Model</h5>
                    <h5 class="col-2 my-2 ml-2">
                        <a class="btn btn-primary" asp-controller="Bills" asp-action="BillAddEdit">Add Bill</a>
                    </h5>
                    <h5 class="col-2 my-2 ">
                        <a class="btn btn-info" asp-controller="ExportToExcel" asp-action="ExportToExcel" asp-route-table="Bills"><i class="bi bi-filetype-xlsx"></i>Export</a>
                    </h5>
                </div>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-success">
                        @TempData["Success"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <!-- Default Table -->
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">BillID</th>
                            <th scope="col">BillNumber</th>
                            <th scope="col">BillDate</th>
                            <th scope="col">OrderID</th>
                            <th scope="col">TotalAmount</th>
                            <th scope="col">Discount</th>
                            <th scope="col">NetAmount</th>
                            <th scope="col">UserName</th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow dr in Model.Rows)
                        {
                            <tr>
                                <td scope="col">@dr["BillID"]</td>
                                <td scope="col">@dr["BillNumber"]</td>
                                <td scope="col">@dr["BillDate"]</td>
                                <td scope="col">@dr["OrderID"]</td>
                                <td scope="col">@dr["TotalAmount"]</td>
                                <td scope="col">@dr["Discount"]</td>
                                <td scope="col">@dr["NetAmount"]</td>
                                <td scope="col">@dr["UserName"]</td>

                                <td>
                                    <a class="btn btn-outline-success" asp-controller="Bills" asp-action="BillAddEdit" asp-route-BillID="@dr["BillID"]">
                                        <i class="bi bi-pen-fill"></i>
                                    </a>
                                </td>
                                <td>
                                    <form method="post" asp-controller="Bills" asp-action="BillDelete">
                                        <input type="hidden" name="BillID" value="@dr["BillID"]" />
                                        <button type="submit" class="btn btn-outline-danger btn-xs" onclick="confirmDelete()">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <!-- End Default Table Example -->
            </div>
        </div>


    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this item?")) {
        }
    }
</script>

