@model OrderDetailModel
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@((Model.OrderDetailID > 0) ? "Edit" : "Add New") Order Detail</h5>
        <!-- Multi Columns Form -->
        <form class="row g-3" asp-controller="OrderDetail" asp-action="OrderDetailSave">
            @Html.HiddenFor(x=>x.OrderDetailID)
            <div class="col-md-6">
                <label class="form-label" asp-for="OrderID">Order Number<span class="text-danger">*</span></label>
                <select class="form-control"  asp-for="OrderID" asp-items="@(new SelectList(ViewBag.OrderList,"OrderID","OrderNumber"))">
                    <option >Select Order Number</option>
                </select>
                <span asp-validation-for="OrderID" class="text-danger"></span>
            </div>
           @*  <div class="col-md-6">
                <label asp-for="OrderDetailID" class="form-label">OrderDetail Name<span class="text-danger">*</span></label>
                <select class="form-control" asp-for="OrderDetailID" asp-items="@(new SelectList(ViewBag.OrderDetailList, "OrderDetailID", "OrderDetailName"))">
                    <option value="">Select OrderDetail</option>
                </select>
                <span asp-validation-for="OrderDetailID" class="text-danger"></span>
            </div> *@
            <div class="col-md-6">
                <label asp-for="Quantity" class="form-label">Quantity<span class="text-danger">*</span></label>
                <input type="number" class="form-control" asp-for="Quantity">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Amount" class="form-label">Amount<span class="text-danger">*</span></label>
                <input type="number" class="form-control" asp-for="Amount">
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="TotalAmount" class="form-label">Total Amount<span class="text-danger">*</span></label>
                <input type="number" class="form-control" asp-for="TotalAmount">
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="UserID" class="form-label">User Name<span class="text-danger">*</span></label>
                <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                    <option value="">Select User</option>
                </select>
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>


            <div class="row">

                @if (Model.OrderDetailID == null || Model.OrderDetailID == 0)
                {
                    <button type="submit" class="btn btn-outline-success mt-3 me-3 col-2">Add New OrderDetail</button>
                }
                else
                {
                    <button type="submit" class="btn btn-outline-success mt-3 me-3 col-2">Update OrderDetail</button>
                }
                <a asp-action="OrderDetailList" asp-controller="OrderDetail" class="btn btn-outline-warning mt-3 col-2">Back To List</a>
            </div>
            
        </form>
    </div>
</div>