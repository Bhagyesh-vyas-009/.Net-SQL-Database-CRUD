
@using System.Data;
@model DataTable
<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <h5 class="col card-title">OrderDetail-Model</h5>
                    <h5 class="col-2 my-2 ml-2">
                        <a class="btn btn-primary" asp-controller="OrderDetail" asp-action="OrderDetailAddEdit">Add OrderDetail</a>
                    </h5>

                </div>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-success">
                        @TempData["Success"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <!-- Default Table -->
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">OrderDetailID</th>
                            <th scope="col">OrderID</th>
                            <th scope="col">ProductName</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Amount</th>
                            <th scope="col">TotalAmount</th>
                            <th scope="col">UserName</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* @foreach (var orderDetail in Model)
                        {
                            <tr>
                                <td>@orderDetail.OrderDetailID</td>
                                <td>@orderDetail.OrderID</td>
                                <td>@orderDetail.ProductID</td>
                                <td>@orderDetail.Quantity</td>
                                <td>@orderDetail.Amount</td>
                                <td>@orderDetail.TotalAmount</td>
                                <td>@orderDetail.UserID</td>
                            </tr>
                        } *@

                        @foreach(DataRow dr in Model.Rows)
                        {
                            <tr>
                                <td scope="col">@dr["OrderDetailID"]</td>
                                <td scope="col">@dr["OrderID"]</td>
                                <td scope="col">@dr["ProductName"]</td>
                                <td scope="col">@dr["Quantity"]</td>
                                <td scope="col">@dr["Amount"]</td>
                                <td scope="col">@dr["TotalAmount"]</td>
                                <td scope="col">@dr["UserName"]</td>

                                <td>
                                    <a class="btn btn-outline-success" asp-controller="OrderDetail" asp-action="OrderDetailAddEdit" asp-route-OrderDetailID="@dr["OrderDetailID"]">
                                        <i class="bi bi-pen-fill"></i>
                                    </a>
                                </td>
                                <td>
                                    <form method="post" asp-controller="OrderDetail" asp-action="OrderDetailDelete">
                                        <input type="hidden" name="OrderDetailID" value="@dr["OrderDetailID"]" />
                                        <button type="submit" class="btn btn-outline-danger btn-xs" onclick="confirmDelete()">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <!-- End Default Table Example -->
            </div>
        </div>


    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this item?")) {
        }
    }
</script>

