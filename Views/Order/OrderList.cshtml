
@using System.Data
@model DataTable

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <h5 class="col card-title">Order List</h5>

                    <h5 class="col-2 my-2 ml-2">
                        <a class="btn btn-primary" asp-controller="Order" asp-action="OrderAddEdit">Add Order</a>
                    </h5>
                    <h5 class="col-2 my-2 ">
                        <a class="btn btn-info" asp-controller="ExportToExcel" asp-action="ExportToExcel" asp-route-table="Order"><i class="bi bi-filetype-xlsx"></i>Export</a>
                    </h5>
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success text-success">
                            @TempData["Success"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                </div>

                <!-- Default Table -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            @* <th scope="col">Order ID</th> *@
                            <th scope="col">Order Date</th>
                            <th scope="col">Order Number</th>
                            <th scope="col">Customer Name</th>
                            <th scope="col">Payment Mode</th>
                            <th scope="col">Total Amount</th>
                            <th scope="col">Shipping Address</th>
                            <th scope="col">User Name</th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow dr in Model.Rows)
                        {
                            <tr>
                                @* <td scope="col">@dr["OrderID"]</td> *@
                                <td scope="col">@dr["OrderDate"]</td>
                                <td scope="col">@dr["OrderNumber"]</td>
                                <td scope="col">@dr["CustomerName"]</td>
                                <td scope="col">@dr["PaymentMode"]</td>
                                <td scope="col" align="right">@dr["TotalAmount"]</td>
                                <td scope="col">@dr["ShippingAddress"]</td>
                                <td scope="col">@dr["UserName"]</td>

                                <td>
                                    <a class="btn btn-outline-success" asp-controller="Order" asp-action="OrderAddEdit" asp-route-OrderID="@dr["OrderID"]">
                                        <i class="bi bi-pen-fill"></i>
                                    </a>
                                </td>
                                <td>
                                    <form method="post" asp-controller="Order" asp-action="OrderDelete">
                                        <input type="hidden" name="OrderID" value="@dr["OrderID"]" />
                                        <button type="submit" class="btn btn-outline-danger btn-xs" onclick="return confirm('Sure!! Are you want to delete @dr["OrderNumber"]')">
                                            <i class="bi bi-x"></i>
                                        </button>

                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <!-- End Default Table Example -->
            </div>
        </div>


    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this item?")) {
        }
    }
</script>
