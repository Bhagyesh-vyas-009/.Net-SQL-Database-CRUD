@using System.Data;
@model DataTable;

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <h5 class="col card-title">Product-Model</h5>
                    <h5 class="col-2 my-2 ml-2">
                        <a class="btn btn-primary" asp-controller="Product" asp-action="ProductAddEdit">Add Product</a>
                    </h5>

                </div>
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success text-success">
                        @TempData["Success"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <!-- Default Table -->
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ProductID</th>
                            <th scope="col">ProductName</th>
                            <th scope="col">ProductPrice</th>
                            <th scope="col">ProductCode</th>
                            <th scope="col">Description</th>
                            <th scope="col">UserName</th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* @foreach(var product in Model)
                        {
                            <tr>
                                <td>@product.ProductID</td>
                                <td>@product.ProductName</td>
                                <td>@product.ProductPrice</td>
                                <td>@product.ProductCode</td>
                                <td>@product.Description</td>
                                <td>@product.UserID</td>
                            </tr>
                        } *@

                        @foreach(DataRow dr in Model.Rows)
                        {
                            <tr>
                                <td scope="col">@dr["ProductID"]</td>
                                <td scope="col">@dr["ProductName"]</td>
                                <td scope="col">@dr["ProductPrice"]</td>
                                <td scope="col">@dr["ProductCode"]</td>
                                <td scope="col">@dr["Description"]</td>
                                <td scope="col">@dr["UserName"]</td>
                                @* <td><button type="submit" class="btn btn-outline-warning"><i class="bi bi-pen"></i></button></td> *@
                                <td>
                                    <a class="btn btn-outline-success btn-xs" asp-controller="Product" asp-action="ProductAddEdit" asp-route-ProductID="@dr["ProductID"]">
                                        <i class="bi bi-pen-fill"></i>
                                    </a>
                                </td>
                                <td>
                                    <form method="post" asp-controller="Product" asp-action="ProductDelete" >
                                        <input type="hidden" name="ProductID" value="@dr["ProductID"]" />

                                        <button type="submit" class="btn btn-outline-danger btn-xs" onclick="confirmDelete()">
                                            <i class="bi bi-x"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                 
                </table>
                <!-- End Default Table Example -->
            </div>
        </div>


    </div>
</div>

<script>
        function confirmDelete() {
            if (confirm("Are you sure you want to delete this item?")) {
            }
        }
</script>



